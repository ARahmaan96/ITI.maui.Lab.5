<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Lab5.Pages.FilePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="File Page"
    Shell.BackgroundColor="#0A1E2E"
    Shell.TitleColor="#fff">

    <StackLayout Padding="10" Spacing="10">

        <Entry x:Name="textInput" Placeholder="Enter text here..." />

        <Button Clicked="OnSaveFileButtonClicked" Text="Save File" />
        <Button Clicked="OnReadFileButtonClicked" Text="Read File" />

        <Label x:Name="SaveFileLabel" />
    </StackLayout>

</ContentPage>